<html>
  <head>
    <title>Hello World</title>
  </head>

  <body>
    <h1>Hello <%= name %></h1>

    <ul>
      <% for(color of colors) { %>
        <li><%= color %></li>
      <% } %>
    </ul>

    <% if(showMoon) { %>
      <img src="/moon.jpg" height="50"/>
    <% } %>

    <img src="https://upload.wikimedia.org/wikipedia/commons/9/97/The_Earth_seen_from_Apollo_17.jpg" height="100"/>

    <form method="POST" action="/handler">
      <input name="name">
      <button>Submit</button>
    </form>

  </body>
</html>
